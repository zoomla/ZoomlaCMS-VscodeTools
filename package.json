{
	"name": "ZoomlaCMS-dev",
	"displayName": "ZoomlaCMS-dev",
	"publisher": "ZoomlaCMS-dev",
	"description": "The Development tools for Zoomla!逐浪CMS z01.com",
	"version": "0.0.81",
	"engines": {
		"vscode": "^1.45.0"
	},
	"icon": "src/assert/icon-128.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ZoomlaCMS-dev.helloWorld",
		"onView:treeView-item",
		"onCommand:itemClick"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ZoomlaCMS-dev.helloWorld",
				"title": "Hello World"
			}
		],
		"viewsContainers": { 
			"activitybar": [
				{
					"id": "treeView",
					"title": "逐浪CMS开发助手",
					"icon": "src/assert/logo.png"
				}
			]
		},
		"views": {  
			"treeView": [ 
				{
					"id": "treeView-item",
					"name": "item",
					"when": ""
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
